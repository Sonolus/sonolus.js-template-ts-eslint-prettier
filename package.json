{
  "name": "sonolus.js-template-ts-eslint-prettier",
  "version": "1.2.1",
  "description": "Sonolus.js Template (TS + ESLint + Prettier)",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:play": "sonolus-cli --dev ./play",
    "dev:preview": "sonolus-cli --dev ./preview",
    "dev:tutorial": "sonolus-cli --dev ./tutorial",
    "type-check": "tsc -p ./shared --noEmit && tsc -p ./play --noEmit && tsc -p ./preview --noEmit && tsc -p ./tutorial --noEmit",
    "format": "prettier . --write",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "build": "sonolus-cli --build ./play && sonolus-cli --build ./preview && sonolus-cli --build ./tutorial"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.3",
    "prettier-plugin-organize-imports": "^3.2.3",
    "sonolus-core": "~7.3.0",
    "sonolus.js": "~9.2.0",
    "typescript": "~5.2.2"
  }
}
